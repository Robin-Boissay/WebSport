{% extends 'base.html.twig' %}

{% block title %}Hello you!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <a href="{{ path('app_proprieter_type_activiter_create') }}" class="btn btn-primary">Create</a>

    {% for proprieter in proprieters %}

        <div class="example-wrapper">
            <a href="{{ path('app_proprieter_type_activiter_edit', {'id': proprieter.id}) }}" class="btn btn-primary">Edit</a>
            <h1>{{ proprieter.nomProprieter }}</h1>
            {% for typeActiviter in proprieter.typeActiviters %}
                <p> {{typeActiviter.nomType}} </p>
            {% endfor %}
        </div>
    {% endfor %}

{% endblock %}
