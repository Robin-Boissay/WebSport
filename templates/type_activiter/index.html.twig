{% extends 'base.html.twig' %}

{% block title %}Hello TypeActiviterController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <a href="{{ path('app_type_activiter_create') }}" class="btn btn-primary">Create</a>

    {% for typeActiviter in typeActiviters %}

        <div class="example-wrapper">
            <a href="{{ path('app_type_activiter_edit', {'id': typeActiviter.id}) }}" class="btn btn-primary">Edit</a>
            <h1>{{ typeActiviter.nomType }}</h1>
            {% for proprieter in typeActiviter.proprieter %}
                <p> {{proprieter.nomProprieter}} </p>
            {% endfor %}
        </div>
    {% endfor %}

{% endblock %}
